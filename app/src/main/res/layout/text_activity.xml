<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/newBgColor"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:background="@drawable/bg_home_topper"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/layTopMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imgBack"
                    android:layout_width="@dimen/_22sdp"
                    android:layout_height="@dimen/_22sdp"
                    android:scaleType="fitStart"
                    android:src="@drawable/ic_back" />

                <LinearLayout
                    android:id="@+id/layGoPreminum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right|center"
                    android:background="@drawable/ic_premium"
                    android:gravity="right|center" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layTopMenu"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_weight="1.5"
                android:orientation="vertical">

                <TextView
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/open_sans_semibold"
                    android:gravity="center"
                    android:text="@string/text_text"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_85sdp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_8sdp"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardUseCompatPadding="true">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="@dimen/_4sdp"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <TextView
                                android:id="@+id/tvSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginVertical="@dimen/_8sdp"
                                android:layout_weight="600"
                                android:drawableRight="@drawable/ic_down_arrow"
                                android:fontFamily="@font/open_sans_regular"
                                android:textColor="#818DBA"
                                android:textSize="@dimen/_11sdp" />

                            <Spinner
                                android:id="@+id/fspinner"
                                android:visibility="gone"
                                style="@style/SpinnerTheme"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginVertical="@dimen/_8sdp" />
                        </LinearLayout>


                        <ImageView
                            android:id="@+id/imageView2"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_marginHorizontal="@dimen/_8sdp"
                            android:src="@drawable/selector_btnswap" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <Spinner
                                android:id="@+id/sspinner"
                                style="@style/SpinnerTheme"
                                android:visibility="gone"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginVertical="@dimen/_8sdp" />

                            <TextView
                                android:id="@+id/tvFspinner2"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginVertical="@dimen/_8sdp"
                                android:layout_weight="600"
                                android:drawableRight="@drawable/ic_down_arrow"
                                android:fontFamily="@font/open_sans_regular"
                                android:textColor="#818DBA"
                                android:textSize="@dimen/_11sdp" />
                        </LinearLayout>
                    </LinearLayout>


                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/select_lang"
                android:layout_marginTop="5dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/_5sdp">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="@dimen/_8sdp"
                        app:cardElevation="@dimen/_3sdp"
                        app:cardUseCompatPadding="true">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_130sdp"
                            android:layout_marginHorizontal="@dimen/_5sdp">

                            <EditText
                                android:id="@+id/querytext"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_32sdp"
                                android:background="@android:color/transparent"
                                android:fontFamily="@font/open_sans_regular"
                                android:gravity="start"
                                android:hint="@string/touchtoinsert"
                                android:textColor="@color/textcolor"
                                android:textColorHint="@color/hintcolor"
                                android:textIsSelectable="true"
                                android:textSize="@dimen/_10sdp" />

                            <ImageView
                                android:id="@+id/clearall"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_alignParentTop="true"
                                android:layout_alignParentRight="true"
                                android:layout_margin="@dimen/_5sdp"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_cross" />

                            <ImageView
                                android:id="@+id/ivspeak"
                                android:layout_width="@dimen/_25sdp"
                                android:layout_height="@dimen/_25sdp"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_marginBottom="@dimen/_8sdp"
                                android:onClick="start"
                                android:padding="@dimen/_5sdp"
                                android:src="@drawable/ic_sound_on" />
                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/translate"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_35sdp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn_translate_bg"
                    android:gravity="center">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/open_sans_semibold"
                        android:text="@string/text_translate"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                    <ImageView
                        android:layout_width="@dimen/_18sdp"
                        android:layout_height="@dimen/_18sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:src="@drawable/ic_translator_arrow" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_8sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="@dimen/_8sdp"
                            app:cardElevation="8dp"
                            app:cardUseCompatPadding="true">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_130sdp"
                                android:layout_marginHorizontal="@dimen/_5sdp">

                                <EditText
                                    android:id="@+id/resulttext"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="5dp"
                                    android:layout_marginTop="@dimen/_5sdp"
                                    android:layout_marginRight="@dimen/_32sdp"
                                    android:background="@android:color/transparent"
                                    android:fontFamily="@font/open_sans_regular"
                                    android:gravity="start"
                                    android:hint="@string/transtext"
                                    android:textColor="@color/textcolor"
                                    android:textColorHint="@color/hintcolor"
                                    android:textIsSelectable="true"
                                    android:textSize="@dimen/_10sdp" />


                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_marginRight="@dimen/_5sdp"
                                    android:layout_marginBottom="@dimen/_8sdp"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:id="@+id/sharet"
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:padding="@dimen/_5sdp"
                                        android:src="@drawable/ic_share" />


                                    <ImageView
                                        android:id="@+id/speakt"
                                        android:layout_width="@dimen/_25sdp"
                                        android:layout_height="@dimen/_25sdp"
                                        android:padding="@dimen/_5sdp"
                                        android:src="@drawable/ic_sound_on" />


                                </LinearLayout>


                                <ImageView
                                    android:id="@+id/copyq"
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:layout_alignParentTop="true"
                                    android:layout_alignParentRight="true"
                                    android:layout_margin="@dimen/_5sdp"
                                    android:padding="@dimen/_5sdp"
                                    android:src="@drawable/ic_copy" />


                            </RelativeLayout>


                        </androidx.cardview.widget.CardView>
                    </RelativeLayout>
                </RelativeLayout>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/adsize"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="center"
        android:gravity="center">

        <translator.text.all.languagetranslator.voice.translation.ad.AdBanner
            android:id="@+id/ad_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"/>
    </LinearLayout>

</LinearLayout>
